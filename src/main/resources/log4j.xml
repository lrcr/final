<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
  <select id="selectAll" resultType="com.hb.model.DTO">
    select * from guest2 order by sabun
  </select>
  
  <select id="selectmail" resultType="Integer">
     select count(*) as cnt from member where email=#{email}
  </select>
  
  <select id="selectnm" resultType="Integer">
     select count(*) as cnt from member where nickname=#{nicknm}
  </select>
  
  <select id="login" parameterType="com.hb.model.DTO" resultType="Integer">
     select count(*) as cnt from member where email=#{email} and pw=#{pw}
  </select>

  <select id="findnm" parameterType="com.hb.model.DTO" resultType="String">
     select nickname from member where email=#{email} and pw=#{pw}
  </select>
  
  <insert id="join" parameterType="com.hb.model.DTO">
     insert into member values (#{email},#{pw},#{nicknm},#{phone},#{agree})
  </insert>
  
</mapper>